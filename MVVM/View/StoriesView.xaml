<UserControl x:Class="FictionHoarder.MVVM.View.StoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:FictionHoarder.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewModel:StoriesViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Stories" Foreground="White" FontSize="30"
                   HorizontalAlignment="Left" Margin="0,0,0,5" Grid.Row="0"/>

        <ListView ItemsSource="{Binding Stories}" Background="Transparent" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ItemTemplate="{StaticResource ListViewItems}" Grid.Row="1"
                  BorderThickness="0">

        </ListView>
        
    </Grid>

</UserControl>
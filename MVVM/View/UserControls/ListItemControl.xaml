<UserControl x:Class="FictionHoarderWPF.MVVM.View.UserControls.ListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FictionHoarderWPF.MVVM.View.UserControls"
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="650" MaxHeight="200">


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Foreground="White" FontSize="24" FontWeight="Bold" Text="{Binding Title}" 
                   Margin="10,0,0,0" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="1" Text="{Binding Author}" Foreground="White" FontSize="16" Margin="10,0,0,0" 
                   HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Summary}" Foreground="White" 
                   FontSize="14" Margin="10,0,0,5" TextWrapping="Wrap" TextTrimming="WordEllipsis"/>

    </Grid>
</UserControl>

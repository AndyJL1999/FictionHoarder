<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="ListViewItems" >
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>


            <TextBlock Grid.Row="0" Foreground="White" FontSize="24" Text="{Binding Title}" Margin="10,0,0,0"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Author}" Foreground="White" FontSize="16" Margin="15,10,0,0" HorizontalAlignment="Right"/>
            <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding Summary}" Foreground="White" FontSize="14" Margin="10,0,0,5" TextWrapping="Wrap"
                       TextTrimming="WordEllipsis"/>

        </Grid>
    </DataTemplate>

</ResourceDictionary>